{% extends "index.html.twig" %}

{% block body %}
    <a class="link" href="/">Возвратиться к списку страниц</a>
    <div class="error">
        {{ form.errors.form }}
    </div>
    <form action="" method="post">
        <div class="form-row">
            <label for="title">Заголовок</label>
            <input id="title" type="text" name="title" value="{{ form.title }}"/>
            <div class="error">{{ form.errors.title }}</div>
        </div>
        <div class="form-row">
            <label for="body">Содержимое</label>
            <textarea id="body" name="body">{{ form.body }}</textarea>
            <div class="error">{{ form.errors.body }}</div>
        </div>

        {% if form.changeParent == true %}
            <div class="form-row">
                <label for="pid">Родитель</label>
                <select id="pid" name="pid">
                    <option value="">Выберите родителя</option>
                    {{ form.parents|raw }}
                </select>
                <div class="error">{{ form.errors.pid }}</div>
            </div>
        {% else %}
            <input type="hidden" name="pid" value="{{ form.pid }}"/>
        {% endif %}

        <div class="form-row">
            <input type="submit" value="Сохранить"/>
        </div>
    </form>
    <a class="link" href="/">Возвратиться к списку страниц</a>
{% endblock %}